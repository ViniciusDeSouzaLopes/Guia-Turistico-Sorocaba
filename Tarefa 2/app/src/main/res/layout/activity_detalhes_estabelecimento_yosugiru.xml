<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesEstabelecimentoYosugiru">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewYosugiru1"
                android:layout_width="563dp"
                android:layout_height="209dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/yosugiru1" />

            <ImageView
                android:id="@+id/imageViewYosugiru2"
                android:layout_width="563dp"
                android:layout_height="255dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/yosugiru2" />

            <ImageView
                android:id="@+id/imageViewYosugiru3"
                android:layout_width="wrap_content"
                android:layout_height="279dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/yosugiru3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este restaurante japonês é uma jóia em Sorocaba, conhecido por seu atendimento excepcional e pratos de dar água na boca. Se você é um apreciador da culinária japonesa, este é o lugar ideal para uma experiência gastronômica incrível. Com um cardápio diversificado, que inclui sushis, sashimis, tempurás e outros pratos tradicionais japoneses, cada mordida é uma explosão de sabores. Além disso, a equipe atenciosa e prestativa garante que você se sinta em casa, tornando a sua visita memorável. Este restaurante é um verdadeiro refúgio para os amantes da comida japonesa e aqueles que apreciam um serviço impecável."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_margin="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="abrirMapa"
                android:text="Ver no Mapa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="abrirSite"
                android:text="Abrir Site" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="fazerLigacao"
                android:text="Ligar" />

            <Button
                android:id="@+id/buttonMenuPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Retornar" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>