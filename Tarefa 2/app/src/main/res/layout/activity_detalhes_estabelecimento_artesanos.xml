<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesEstabelecimentoArtesanosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewArtesanos1"
                android:layout_width="563dp"
                android:layout_height="209dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/artesanos1" />

            <ImageView
                android:id="@+id/imageViewArtesanos2"
                android:layout_width="563dp"
                android:layout_height="255dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/artesanos2" />

            <ImageView
                android:id="@+id/imageViewArtesanos3"
                android:layout_width="wrap_content"
                android:layout_height="279dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/artesanos3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uma lanchonete em Sorocaba é o destino perfeito para os amantes de hambúrgueres e milkshakes incríveis. Este estabelecimento oferece uma variedade de hambúrgueres suculentos, preparados com ingredientes frescos e saborosos, que certamente irão satisfazer seu paladar. Além disso, seus milkshakes são verdadeiramente irresistíveis, perfeitos para acompanhar qualquer refeição. Localizado em Sorocaba, este local é um verdadeiro paraíso para os apaixonados por lanches deliciosos."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_margin="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="abrirMapa"
                android:text="Ver no Mapa" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="abrirSite"
                android:text="Abrir Site" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="fazerLigacao"
                android:text="Ligar" />

            <Button
                android:id="@+id/buttonMenuPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Retornar" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>